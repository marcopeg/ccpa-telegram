{
  "name": "@marcopeg/hal",
  "version": "1.0.19",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hal": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "start": "tsx watch src/cli.ts start --cwd examples",
    "build": "tsc && chmod +x dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "prepublishOnly": "pnpm run build",
    "sync-skills": "node .agents/scripts/sync-skills.mjs",
    "prepare": "husky",
    "deploy": "npm version patch && npm publish --access public"
  },
  "keywords": [
    "telegram",
    "claude",
    "codex",
    "copilot",
    "cursors",
    "agent",
    "opencode",
    "bot",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "description": "Telegram bot for AI coding agents. Multi-project and multi-engine: run Claude Code, Copilot, Codex, or OpenCode per project, each with its own bot.",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcopeg/hal.git"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.2",
    "nodejs-whisper": "^0.2.9",
    "pino": "^10.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.8",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
