{
  "name": "ccpa-telegram",
  "version": "1.0.5",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ccpa-telegram": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsx watch src/cli.ts start --cwd examples/basic",
    "start": "tsx src/cli.ts start --cwd examples/basic",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "keywords": [
    "telegram",
    "claude",
    "bot",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "ISC",
  "description": "Telegram bot that invokes Claude Code as a personal assistant",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "grammy": "^1.39.2",
    "nodejs-whisper": "^0.2.9",
    "pino": "^10.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.8",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
