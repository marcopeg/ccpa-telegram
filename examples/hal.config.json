{
  "globals": {
    "access": {
      "allowedUserIds": []
    },
    "engine": {
      "name": "claude",
      "session": true
    },
    "logging": {
      "level": "info",
      "flow": true,
      "persist": true
    },
    "rateLimit": {
      "max": 10,
      "windowMs": 60000
    },
    "transcription": {
      "model": "medium",
      "showTranscription": true
    }
  },
  "context": {
    "custom": "-- global custom context --"
  },
  "projects": [
    {
      "name": "obsidian",
      "cwd": "./obsidian",
      "active": true,
      "engine": {
        "name": "opencode"
      },
      "telegram": {
        "botToken": "${OBSIDIAN_TELEGRAM_TOKEN}"
      },
      "context": {
        "secondCustom": "-- first custom --",
        "thirdCustom": "-- second custom --"
      },
      "commands": {
        "start": {
          "session": {
            "reset": true
          },
          "message": {
            "from": ".hal/WELCOME.md"
          }
        }
      }
    },
    {
      "name": "timetracker",
      "cwd": "./timetracker",
      "telegram": {
        "botToken": "${TIMETRACKER_TELEGRAM_TOKEN}"
      }
    }
  ]
}
